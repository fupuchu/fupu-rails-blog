<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
    <div id="errors">
      <h5><%= pluralize(@post.errors.count, "error") %> prevented this post from being posted!</h5>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li style="color:red;"><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.cktext_area :body, rows: 10 %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
